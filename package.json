{
  "name": "solar-sim",
  "version": "0.2.1",
  "dependencies": {
    "dat.gui": "^0.7.0",
    "rollup-plugin-commonjs": "^9.1.3",
    "stats.js": "^0.17.0",
    "three": "^0.99.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^8.0.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.6.0",
    "babel-runtime": "^6.26.0",
    "eslint": "^5.0.0",
    "husky": "^1.0.0",
    "lint-staged": "^8.0.0",
    "prettier": "^1.9.1",
    "prettier-standard": "^8.0.0",
    "rollup": "^1.0.0",
    "rollup-plugin-babel": "^4.0.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-postcss": "^1.0.0",
    "rollup-plugin-uglify": "^6.0.0",
    "rollup-watch": "^4.3.1",
    "speedracer": "^0.2.0",
    "uglify-es": "^3.2.1",
    "webpack": "^4.0.0",
    "webpack-bundle-analyzer": "^3.0.0",
    "webpack-dev-server": "^3.0.0"
  },
  "scripts": {
    "start": "webpack-dev-server --watch-content-base",
    "start-production": "webpack-dev-server -p --watch-content-base",
    "build-webpack": "webpack -p --progress",
    "build": "rollup -c rollup.config.prod-es.js && rollup -c rollup.config.prod-common.js",
    "dev": "rollup -c -w",
    "stats": "webpack --profile --json > stats.json; webpack-bundle-analyzer stats.json",
    "format": "prettier-standard 'src/**/*.js'",
    "test": "yarn format",
    "precommit": "lint-staged",
    "speed": "speedracer run && speedracer display"
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier-standard",
      "git add"
    ]
  }
}
