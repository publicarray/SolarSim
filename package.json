{
  "name": "solar-sim",
  "version": "0.2.1",
  "dependencies": {
    "dat.gui": "^0.7.6",
    "stats.js": "^0.17.0",
    "three": "^0.114.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.6",
    "@babel/preset-env": "^7.8.7",
    "@babel/register": "^7.8.6",
    "babel-loader": "^8.0.6",
    "eslint": "^6.8.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "prettier-standard": "^16.2.1",
    "rollup": "^1.32.1",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^2.4.0",
    "rollup-plugin-terser": "^5.2.0",
    "rollup-plugin-uglify": "^6.0.4",
    "script-ext-html-webpack-plugin": "^2.1.4",
    "webpack": "^4.42.0",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "scripts": {
    "start": "webpack-dev-server --watch-content-base",
    "start-production": "webpack-dev-server -p --watch-content-base",
    "build-webpack": "webpack -p --progress",
    "build": "rollup -c rollup.config.prod-es.js && rollup -c rollup.config.prod-common.js",
    "dev": "rollup -c -w",
    "stats": "webpack --profile --json > stats.json; webpack-bundle-analyzer stats.json",
    "format": "prettier-standard 'src/**/*.js'",
    "test": "yarn format",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier-standard",
      "git add"
    ]
  }
}
