{
  "name": "solar-sim",
  "version": "0.2.1",
  "dependencies": {
    "dat.gui": "^0.7.6",
    "stats.js": "^0.17.0",
    "three": "^0.111.0"
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.7.4",
    "@babel/register": "^7.6.2",
    "babel-loader": "^8.0.6",
    "eslint": "^6.5.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.7",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2",
    "prettier-standard": "^16.0.0",
    "rollup": "^1.22.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-terser": "^5.1.2",
    "rollup-plugin-uglify": "^6.0.3",
    "script-ext-html-webpack-plugin": "^2.1.4",
    "webpack": "^4.41.2",
    "webpack-bundle-analyzer": "^3.5.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.8.1"
  },
  "scripts": {
    "start": "webpack-dev-server --watch-content-base",
    "start-production": "webpack-dev-server -p --watch-content-base",
    "build-webpack": "webpack -p --progress",
    "build": "rollup -c rollup.config.prod-es.js && rollup -c rollup.config.prod-common.js",
    "dev": "rollup -c -w",
    "stats": "webpack --profile --json > stats.json; webpack-bundle-analyzer stats.json",
    "format": "prettier-standard 'src/**/*.js'",
    "test": "yarn format",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier-standard",
      "git add"
    ]
  }
}
