{
  "name": "solar-sim",
  "version": "0.0.1",
  "dependencies": {
    "dat.gui": "^0.6.1",
    "stats.js": "^0.17.0",
    "three": "^0.86.0"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.0",
    "babel-preset-env": "^1.5.2",
    "babel-runtime": "^6.23.0",
    "eslint": "^4.1.1",
    "html-webpack-plugin": "^2.29.0",
    "husky": "^0.14.1",
    "lint-staged": "^4.0.0",
    "prettier": "^1.4.4",
    "prettier-standard": "^5.1.0",
    "rollup": "^0.43.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "rollup-watch": "^4.0.0",
    "uglify-es": "^3.0.20",
    "webpack": "^3.0.0",
    "webpack-bundle-analyzer": "^2.8.2",
    "webpack-dev-server": "^2.5.0"
  },
  "scripts": {
    "start": "webpack-dev-server --content-base dist --watch-content-base",
    "start-production": "webpack-dev-server -p --content-base dist --watch-content-base",
    "build": "rollup -c rollup.config.prod.js && webpack -p --progress",
    "dev": "rollup -c -w",
    "stats": "webpack --profile --json > stats.json; webpack-bundle-analyzer stats.json",
    "format": "prettier-standard 'src/**/*.js'",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier-standard",
      "git add"
    ]
  }
}
